<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
<servlet>
    <servlet-name>Jersey Web Application</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
        <param-name>jersey.config.server.provider.packages</param-name>
        <param-value>test1.test1</param-value>
    </init-param>
    <init-param>
        <!-- speed up initial Jersey loading by deactivating WADL -->
        <param-name>jersey.config.server.wadl.disableWadl</param-name>
        <param-value>true</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
</servlet>
<servlet-mapping>
    <servlet-name>Jersey Web Application</servlet-name>
    <url-pattern>/context/*</url-pattern>
</servlet-mapping>
<servlet>
        <servlet-name>signin</servlet-name>
        <servlet-class>com.google.pit.Authentication</servlet-class>
</servlet>
<servlet>
        <servlet-name>settings</servlet-name>
        <servlet-class>com.google.pit.Settings</servlet-class>
</servlet>
<servlet>
        <servlet-name>worker</servlet-name>
        <servlet-class>com.google.pit.Worker</servlet-class>
</servlet>
<servlet>
        <servlet-name>sms</servlet-name>
        <servlet-class>com.google.pit.SendSms</servlet-class>
</servlet>

<servlet-mapping>
        <servlet-name>signin</servlet-name>
        <url-pattern>/signin</url-pattern>
</servlet-mapping>
<servlet-mapping>
        <servlet-name>settings</servlet-name>
        <url-pattern>/settings</url-pattern>
</servlet-mapping>
<servlet-mapping>
        <servlet-name>worker</servlet-name>
        <url-pattern>/worker</url-pattern>
</servlet-mapping>
<servlet-mapping>
        <servlet-name>sms</servlet-name>
        <url-pattern>/sms</url-pattern>
</servlet-mapping>

<welcome-file-list>
        <welcome-file>coverindex.jsp</welcome-file>
</welcome-file-list>
</web-app>
